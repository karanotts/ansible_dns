key "mylabserver.com." {
  algorithm hmac-md5;# {{ ansible_managed }} {% for domain_zone in domain_zones %}
  secret 
"ptpTJAdNrUS3NfNDsDSGHgIml1R5LQhpTlYlqagxe0/FgN+3/rYHFR6SBYrOV1tyJPBCjw9+a19foc1R2++DMg=="; 
zone {{ domain_zone.name }} {
};

  {% if domain_zone.type == "master" %} 
  type master;
  {% elif domain_zone.type == "slave" %} 
  type slave;
    masters {
      {{ domain_zone.master }};
    };
  {% endif %}
  file "{{ zones_dir }}/db.{{ domain_zone.name }}";
  allow-transfer { localhost; };
  allow-update { {{ ansible_hostname }}; };
};

zone "{{ domain_zone.reverse }}.in-addr.arpa" {
  {% if domain_zone.type == "master" %}
  type master;
  {% elif domain_zone.type == "slave" %}
  type slave;
    masters {
      {{ domain_zone.master }};
    };
  {% endif %}
  file "{{ zones_dir }}/db.{{ domain_zone.reverse }}";
  allow-transfer { localhost; };
  allow-update { {{ ansible_localhostname }}; };
};

{% endfor %}
