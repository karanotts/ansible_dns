{% for domain_zone in domain_zones %}

zone {{ domain_zone.name }} {
    type master;
    file "{{ zones_dir }}/db.{{ domain_zone.name }}";
    allow-transfer { localhost; };
    allow-query { any };
};

zone "{{ domain_zone.reverse }}.in-addr.arpa" {
    type master;
    file "{{ zones_dir }}/db.{{ domain_zone.reverse }}";
    allow-transfer { localhost; };
    allow-query { any };
};

{% endfor %}
